<%# This is the book form. I need to make it prettier %>

<%= link_to "back", :back, class: "btn btn-primary" %>


  <%= simple_form_for(book) do |f| %>
  <%= f.input :title %>
  <%= f.input :writer %>
  <%= f.input :year, placeholder: "only year, eg.: 2016, 2020" %>
  <%= f.input :language %>
  <%= f.input :genree %>
  <%= f.input :pages, placeholder: "only numbers, eg.: 315, 180" %>
  <%= f.input :status, selected: "not read", collection: ["read", "not read", "unfinished", "currently reading" ] %>
  <%= f.input :date_finished, html5: true  %>
  <%= f.input :print, collection: ["Printed", "E-book", "other"] %>
  <%= f.input :purchased, html5: true %>
  <%= f.input :lended %>
  <%= f.input :lended_to %>
  <%= f.input :location %>
  <%= f.submit :"Save", class: "btn btn-primary" %>
  <% end %>
